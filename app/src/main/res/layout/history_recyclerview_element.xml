<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@android:color/white">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_bookmark_black_36dp"
        android:id="@+id/favourite_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="?attr/selectableItemBackground"
        android:padding="7dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/favourite_button"
        android:layout_toEndOf="@+id/favourite_button">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="dw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_history"
                android:id="@+id/Translate_history"
                android:layout_toLeftOf="@+id/type_translate"
                android:layout_toRightOf="@+id/favourite_button"
                android:layout_toEndOf="@+id/favourite_button"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textIsSelectable="true" />

            <TextView
                android:text="wd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/input_history"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/type_translate"
                android:layout_toRightOf="@+id/favourite_button"
                android:layout_toEndOf="@+id/favourite_button"
                android:layout_alignEnd="@+id/type_translate"
                android:layout_alignRight="@+id/type_translate"
                android:textIsSelectable="true" />

        </LinearLayout>

        <TextView
            android:text="dw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type_translate"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:paddingLeft="7dp"
            android:paddingRight="7dp" />

    </LinearLayout>

</RelativeLayout>